<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.ParameterActivity"
    tools:showIn="@layout/parameter_activity">


    <TextView
        android:id="@+id/level1label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="124dp"
        android:text="@string/level1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/level2label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="120dp"
        android:text="@string/level2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level1label" />

    <TextView
        android:id="@+id/level3label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="8dp"
        android:text="@string/level3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level2label"
        app:layout_constraintVertical_bias="0.103" />

    <EditText
        android:id="@+id/level1value"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="number"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/level1label"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/level2value"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="number"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/level2label"
        app:layout_constraintTop_toBottomOf="@+id/level1value" />

    <EditText
        android:id="@+id/level3value"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="number"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/level3label"
        app:layout_constraintTop_toBottomOf="@+id/level2value" />

    <Button
        android:id="@+id/sauvegarder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="saveValues"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level3value"
        app:layout_constraintVertical_bias="0.195" />
</android.support.constraint.ConstraintLayout>